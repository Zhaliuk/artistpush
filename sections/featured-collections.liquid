<div class="section">
    <div class="container">
        <div class="section-heading flex-container flex-between flex-bottom">
            <h2 class="section-heading__title">{{ section.settings.section-title }}</h2>
            <div class="section-heading__more"><a href="{{ section.settings.va-url }}"
                                                  class="btn">{{ section.settings.va-text }}</a></div>
        </div>
        {% assign collect = section.blocks %}
        {% if collect != blank %}
            <div class="featured-collection-grid">
                {% for item in collect %}
                    {% assign collection = collections[item.settings.collection] %}
                    <a href="{{ collection.url }}" class="collection-layout collection-layout-{{ item.settings.icon }}">
                        <div class="collection-icon">
                            <i class="icon icon-{{ item.settings.icon }}"></i>
                        </div>
                        <div class="title">{{ collection.title }}</div>
                        <div class="corner"></div>
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>

