    justify-content: center;

  }

  .header__search-mob {
    display: block;
    position: relative;
    margin-bottom: 25px;

    input {
      display: block;
      width: 100%;
      height: 50px;
      padding: 0 15px 0 40px;
      background-color: rgba(#C4C4C4, .1);
      border: 0;
      font-family: 'DM Sans', sans-serif;
      font-size: 14px;
      line-height: 18px;
      letter-spacing: 0.11em;
      color: #fff;
    }

    button {
      display: flex;
      position: absolute;
      top: 0;
      left: 0;
      align-items: center;
      align-content: center;
      justify-content: center;
      width: 40px;
      height: 100%;
      background-color: transparent;
      border: 0;
      margin: 0;
      padding: 0;
      color: #AD131C;
      font-size: 16px;

    }
  }

  .header__nav {
    padding-top: 20px;
  }

  .reviews-grid {
    display: flex;
    flex-wrap: nowrap;
  }


  .review-layout {
    width: 100%;

    &.review-layout-first .review {
      font-size: 32px;
      line-height: 38px;
    }
  }

  .reviews-grid-wrap::-webkit-scrollbar {
    display: none;
  }

  .reviews-grid-wrap {
    margin: 0 -24px;
    padding: 0 24px;

    width: 100vw;
    overflow-x: scroll;
  }

  .reviews-grid {
    padding-right: 24px;
  }

  .section-blog {
    margin-top: 0;
  }

  .collection-sort {
    width: 100%;

    &:last-child {
      margin-top: 24px;
    }
  }

  .collection-desc {
    line-height: 22px;
    letter-spacing: 0.04em;
  }

  .collection-header {
    margin-bottom: 30px;
  }

  .collection-footer .title {
    font-weight: bold;
    font-size: 32px;
    line-height: 42px;
  }

  .collection-footer .content {
    column-count: 1;
    column-gap: 0;
    font-size: 14px;
    line-height: 20px;
    letter-spacing: 0.04em;
  }

  .collection-footer .content p:first-child {
    font-size: 18px;
    line-height: 22px;
    letter-spacing: 0.04em;
  }

  .template-collection .collection-header:before {
    content: '';
    display: block;
    position: absolute;
    z-index: -1;
    top: -120px;
    right: -220px;
    width: 185px;
    height: 620px;
    background: #AD131C;
    filter: blur(48px);
    transform: rotate(120deg);
    border-radius: 50%;
  }

  .article-content .btn {
    padding: 0 11px;
  }

  .article-content iframe[src*='youtube'], .article-content iframe[src^='youtube'] {
    width: 100%;
    height: calc((100vw - 50px) / 1.77);
  }
}

.up {
  display: block;
  width: 70px;
  height: 70px;
  //background-color: #94181f;
  position: fixed;
  z-index: 15;
  bottom: 55px;
  right: 0;
  background-size: contain;
  background-image: url(arrow-top.svg);
  background-repeat: no-repeat;
  background-position: center;
  transform: translateX(100%) rotate(-90deg);
  transition: .3s;
  cursor: pointer;

  &.active {
    transform: translateX(0) rotate(-90deg);
  }
}